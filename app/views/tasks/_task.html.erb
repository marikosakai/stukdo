<div class="panel panel-teacup panel-margin">
	<div class="panel-heading">
	<div class="pull-left"><%= link_to 'Edit', edit_task_path(task), class: "link-color" %></div>
		Created <%= time_ago_in_words(task.created_at) %> ago

		<%= link_to "x", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "pull-right link-color" %>
	</div>

	<div class="panel-body"><%= raw(task.content_html) %></div>

	<div class="panel-footer text-center">
		<% if task.state == "doing" %>
		<div class="btn-group btn-group-justified">
		<%= link_to "<i class='fa fa-chevron-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-teacup btn-md btn-block" %>
		<%= link_to "<i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-teacup btn-md btn-block" %>
		</div>

		<% elsif task.state == "done" %>
		<%= link_to "<i class='fa fa-chevron-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-teacup btn-md btn-block" %>

		<% else %>
		<%= link_to "<i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-teacup btn-md btn-block" %>

		<% end %>

	</div>
</div>
