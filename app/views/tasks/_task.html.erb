<div class="panel panel-success">
	<div class="panel-heading">
	<%= link_to edit_task_path(task) do %>
		Created <%= time_ago_in_words(task.created_at) %> ago
	<% end %>

	<%= link_to "x", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "pull-right" %>
	</div>	

	<div class="panel-body"><%= task.content %></div>

	<div class="panel-footer text-center">
		<% if task.state == "doing" %>
		<div class="btn-group btn-group-justified">
		<%= link_to "<i class='fa fa-chevron-circle-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-success btn-md btn-block" %>
		<%= link_to "<i class='fa fa-chevron-circle-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-success btn-md btn-block" %>
		</div>

		<% elsif task.state == "done" %>
		<%= link_to "<i class='fa fa-chevron-circle-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-success btn-md btn-block" %>

		<% else %>
		<%= link_to "<i class='fa fa-chevron-circle-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-success btn-md btn-block" %>

		<% end %>

	</div>
</div>